<body>

    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect } = React;

        // --- CONFIGURA√á√ïES ---
        const CONST_PIX_KEY = "000.000.000-00"; // INSIRA A CHAVE PIX DO RESPONS√ÅVEL LOCAL
        const CONST_PIX_NAME = "NOME DO RESPONSAVEL"; // NOME DO DONO DA CONTA
        const CONST_WHATSAPP_NUMBER = "5511999999999"; // N√öMERO PARA RECEBER COMPROVANTE (SEM FORMATACAO)
        const CONST_GOOGLE_SHEET_URL = ""; // URL DO APP SCRIPT (Opcional, deixe vazio se n√£o usar)

        const VALOR_INTEGRAL = 70.00;
        const VALOR_PARCELA = 35.00;

        // --- COMPONENTE PRINCIPAL ---
        function App() {
            const [step, setStep] = useState(0);
            const [loading, setLoading] = useState(false);
            const [formData, setFormData] = useState({
                nome: '',
                congregacao: '',
                telefone: '',
                quantidade: 1,
                modalidade: 'integral', // integral, p1, p2
                total: 70.00
            });

            // Atualiza total quando quantidade ou modalidade muda
            useEffect(() => {
                let unitPrice = 0;
                if (formData.modalidade === 'integral') unitPrice = VALOR_INTEGRAL;
                else unitPrice = VALOR_PARCELA;
                
                setFormData(prev => ({ ...prev, total: unitPrice * prev.quantidade }));
            }, [formData.quantidade, formData.modalidade]);

            const handleInputChange = (e) => {
                const { name, value } = e.target;
                setFormData(prev => ({ ...prev, [name]: value }));
            };

            const nextStep = () => setStep(prev => prev + 1);
            const prevStep = () => setStep(prev => prev - 1);

            // --- VIEW: HOME ---
            if (step === 0) {
                return (
                    <div className="app-container fade-in">
                        <div className="text-center mb-5">
                            <h1 className="title-hero">Confer√™ncia<br/>EBD</h1>
                            <p className="subtitle">14 de Mar√ßo - Ch√°cara Fl√≥rida</p>
                        </div>

                        <div className="custom-card">
                            <h3 style={{color: 'var(--gold)', fontFamily: 'Black Ops One', marginBottom: '20px'}}>
                                <i className="fa-solid fa-ticket"></i> PULSEIRA DE ACESSO
                            </h3>
                            
                            <div className="d-flex justify-content-between mb-3 border-bottom border-secondary pb-2">
                                <span>Investimento:</span>
                                <span className="fw-bold" style={{color: 'var(--gold)'}}>R$ 70,00</span>
                            </div>

                            <div className="alert-box">
                                <strong className="d-block mb-1"><i className="fa-solid fa-calendar-check"></i> PRAZO DE ACERTO:</strong>
                                <span style={{fontSize: '1.2rem', fontWeight: 'bold'}}>06/03 (Sexta-feira)</span>
                                <div className="small mt-1 text-white-50">Data limite para acerto no campo.</div>
                            </div>

                            <div className="info-box text-center">
                                <i className="fa-brands fa-pix fa-2x mb-2" style={{color: 'var(--gold)'}}></i><br/>
                                <strong>PAGAMENTO EXCLUSIVO VIA PIX</strong><br/>
                                <small>‚ùå Proibido cart√£o ou dep√≥sito em conta da igreja.</small>
                            </div>

                            <button className="btn-gold" onClick={nextStep}>
                                GARANTIR MINHA PULSEIRA
                            </button>
                        </div>
                    </div>
                );
            }

            // --- VIEW: PASSO 1 (DADOS) ---
            if (step === 1) {
                return (
                    <div className="app-container fade-in">
                        <StepIndicator step={1} />
                        <h4 className="text-center mb-4">Seus Dados</h4>
                        <div className="custom-card">
                            <div className="mb-3">
                                <label className="form-label text-muted small">Nome Completo</label>
                                <input type="text" className="form-control" name="nome" value={formData.nome} onChange={handleInputChange} placeholder="Ex: Jo√£o da Silva" />
                            </div>
                            <div className="mb-3">
                                <label className="form-label text-muted small">Congrega√ß√£o</label>
                                <input type="text" className="form-control" name="congregacao" value={formData.congregacao} onChange={handleInputChange} placeholder="Ex: Sede, Jd. Oliveiras..." />
                            </div>
                            <div className="mb-3">
                                <label className="form-label text-muted small">WhatsApp (com DDD)</label>
                                <input type="tel" className="form-control" name="telefone" value={formData.telefone} onChange={handleInputChange} placeholder="(11) 99999-9999" />
                            </div>
                            
                            <div className="d-flex gap-2 mt-4">
                                <button className="btn btn-outline-secondary w-50 rounded-pill" onClick={prevStep}>Voltar</button>
                                <button 
                                    className="btn-gold w-50" 
                                    onClick={nextStep}
                                    disabled={!formData.nome || !formData.congregacao || !formData.telefone}
                                >
                                    Pr√≥ximo
                                </button>
                            </div>
                        </div>
                    </div>
                );
            }

            // --- VIEW: PASSO 2 (PAGAMENTO) ---
            if (step === 2) {
                return (
                    <div className="app-container fade-in">
                        <StepIndicator step={2} />
                        <h4 className="text-center mb-4">Configurar Pagamento</h4>
                        <div className="custom-card">
                            
                            <div className="mb-4">
                                <label className="form-label text-muted small">Quantidade de Pulseiras</label>
                                <select className="form-select" name="quantidade" value={formData.quantidade} onChange={handleInputChange}>
                                    {[1,2,3,4,5].map(n => <option key={n} value={n}>{n}</option>)}
                                </select>
                            </div>

                            <label className="form-label text-muted small mb-2">O que voc√™ vai pagar agora?</label>
                            
                            <div 
                                className={`payment-option ${formData.modalidade === 'integral' ? 'selected' : ''}`}
                                onClick={() => setFormData({...formData, modalidade: 'integral'})}
                            >
                                <div>
                                    <strong>Valor Total</strong>
                                    <div className="small text-muted">Pagamento √∫nico</div>
                                </div>
                                <div className="text-end">
                                    <div style={{color: 'var(--gold)', fontWeight: 'bold'}}>R$ 70,00</div>
                                    <input type="radio" className="radio-custom" checked={formData.modalidade === 'integral'} readOnly />
                                </div>
                            </div>

                            <div 
                                className={`payment-option ${formData.modalidade === 'p1' ? 'selected' : ''}`}
                                onClick={() => setFormData({...formData, modalidade: 'p1'})}
                            >
                                <div>
                                    <strong>1¬™ Parcela</strong>
                                    <div className="small text-muted">Vencimento M√™s 1</div>
                                </div>
                                <div className="text-end">
                                    <div style={{color: 'var(--gold)', fontWeight: 'bold'}}>R$ 35,00</div>
                                    <input type="radio" className="radio-custom" checked={formData.modalidade === 'p1'} readOnly />
                                </div>
                            </div>

                            <div 
                                className={`payment-option ${formData.modalidade === 'p2' ? 'selected' : ''}`}
                                onClick={() => setFormData({...formData, modalidade: 'p2'})}
                            >
                                <div>
                                    <strong>2¬™ Parcela</strong>
                                    <div className="small text-muted">Acerto Final</div>
                                </div>
                                <div className="text-end">
                                    <div style={{color: 'var(--gold)', fontWeight: 'bold'}}>R$ 35,00</div>
                                    <input type="radio" className="radio-custom" checked={formData.modalidade === 'p2'} readOnly />
                                </div>
                            </div>

                            <div className="mt-4 pt-3 border-top border-secondary d-flex justify-content-between align-items-center">
                                <span className="text-muted">Total a Pagar:</span>
                                <span style={{fontSize: '1.5rem', fontWeight: 'bold', color: 'var(--gold)'}}>
                                    R$ {formData.total.toFixed(2).replace('.',',')}
                                </span>
                            </div>

                            <div className="d-flex gap-2 mt-4">
                                <button className="btn btn-outline-secondary w-50 rounded-pill" onClick={prevStep}>Voltar</button>
                                <button className="btn-gold w-50" onClick={nextStep}>Ir para PIX</button>
                            </div>
                        </div>
                    </div>
                );
            }

            // --- VIEW: PASSO 3 (CHECKOUT) ---
            if (step === 3) {
                const copyPix = () => {
                    navigator.clipboard.writeText(CONST_PIX_KEY);
                    alert("Chave PIX copiada!");
                };

                const finishOrder = async () => {
                    setLoading(true);
                    
                    // 1. Enviar para Google Sheets (Se configurado)
                    if (CONST_GOOGLE_SHEET_URL) {
                        try {
                            await fetch(CONST_GOOGLE_SHEET_URL, {
                                method: 'POST',
                                mode: 'no-cors', // Importante para scripts simples do Google
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({
                                    data: new Date().toLocaleString(),
                                    ...formData
                                })
                            });
                        } catch (e) {
                            console.error("Erro ao salvar na planilha", e);
                            // N√£o bloqueia o fluxo se falhar a planilha
                        }
                    }

                    // 2. Gerar Link WhatsApp
                    const modalidadeTexto = {
                        'integral': 'Valor Total',
                        'p1': '1¬™ Parcela',
                        'p2': '2¬™ Parcela'
                    }[formData.modalidade];

                    const msg = `*COMPROVANTE PULSEIRA EBD*%0A` +
                                `--------------------------------%0A` +
                                `üë§ *Nome:* ${formData.nome}%0A` +
                                `‚õ™ *Congrega√ß√£o:* ${formData.congregacao}%0A` +
                                `üéü *Qtd:* ${formData.quantidade}%0A` +
                                `üí≤ *Tipo:* ${modalidadeTexto}%0A` +
                                `üí∞ *Valor:* R$ ${formData.total.toFixed(2).replace('.',',')}%0A` +
                                `--------------------------------%0A` +
                                `Segue o comprovante em anexo.`;

                    const waLink = `https://wa.me/${CONST_WHATSAPP_NUMBER}?text=${msg}`;
                    
                    setLoading(false);
                    // Redirecionar
                    window.location.href = waLink;
                };

                return (
                    <div className="app-container fade-in">
                        <StepIndicator step={3} />
                        <h4 className="text-center mb-4">Realizar Pagamento</h4>
                        
                        <div className="custom-card text-center">
                            <p className="text-muted mb-2">Valor a transferir</p>
                            <h2 style={{color: 'var(--gold)', fontFamily: 'Black Ops One', fontSize: '2.5rem'}}>
                                R$ {formData.total.toFixed(2).replace('.',',')}
                            </h2>
                            <hr className="border-secondary my-4"/>
                            
                            <p className="mb-1">Chave PIX (Respons√°vel Local)</p>
                            <div className="bg-dark p-3 rounded border border-secondary mb-3 d-flex justify-content-between align-items-center">
                                <span className="text-truncate me-2">{CONST_PIX_KEY}</span>
                                <button className="btn btn-sm btn-outline-light" onClick={copyPix}>
                                    <i className="fa-regular fa-copy"></i>
                                </button>
                            </div>
                            <p className="small text-muted">Favorecido: {CONST_PIX_NAME}</p>

                            <div className="alert alert-warning small mt-3" role="alert">
                                <i className="fa-solid fa-triangle-exclamation"></i> <strong>Aten√ß√£o:</strong> N√£o aceitamos comprovante de agendamento.
                            </div>
                        </div>

                        <div className="d-grid gap-2">
                            <button 
                                className="btn-gold" 
                                onClick={finishOrder}
                                disabled={loading}
                            >
                                {loading ? <i className="fa-solid fa-spinner fa-spin"></i> : <i className="fa-brands fa-whatsapp"></i>} ENVIAR COMPROVANTE
                            </button>
                            <button className="btn btn-link text-muted text-decoration-none" onClick={prevStep}>
                                Voltar e corrigir
                            </button>
                        </div>
                    </div>
                );
            }
        }

        // --- COMPONENTE AUXILIAR: Step Indicator ---
        function StepIndicator({ step }) {
            return (
                <div className="step-indicator">
                    <div className={`step-dot ${step >= 1 ? 'active' : ''}`}></div>
                    <div className={`step-dot ${step >= 2 ? 'active' : ''}`}></div>
                    <div className={`step-dot ${step >= 3 ? 'active' : ''}`}></div>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
