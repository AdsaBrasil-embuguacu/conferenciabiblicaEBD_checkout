        .info-box {
            background: rgba(212, 175, 55, 0.1);
            border-left: 4px solid var(--gold);
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        /* Inputs */
        .form-control, .form-select {
            background-color: #222;
